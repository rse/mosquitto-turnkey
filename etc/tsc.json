{
    "compilerOptions": {
        "outDir":                       "../dst",
        "target":                       "es2024",
        "module":                       "nodenext",
        "moduleResolution":             "nodenext",
        "useDefineForClassFields":      false,
        "allowSyntheticDefaultImports": true,
        "composite":                    false,
        "strict":                       true,
        "strictFunctionTypes":          true,
        "resolveJsonModule":            true,
        "isolatedModules":              false,
        "esModuleInterop":              false,
        "lib":                          [ "es2024" ],
        "skipLibCheck":                 false,
        "declaration":                  true,
        "noEmit":                       false,
        "types":                        [ "node", "mocha" ],
        "rootDir":                      "../src"
    },
    "include": [ "../src/*.ts" ],
    "exclude": [ "../node_modules" ]
}
